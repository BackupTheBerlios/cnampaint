<project>
    <pomVersion>3</pomVersion>
    <id>cnampaint</id>
    <name>CnamPaint</name>
    <groupId>cnampaint</groupId>

    <currentVersion>1.0</currentVersion>
    <organization>
        <name>CnamPaint</name>
        <url>http://cnampaint.berlios.de</url>
    </organization>

    <inceptionYear>2005</inceptionYear>

    <package>org.eu.cnampaint</package>

    <url>http://cnampaint.berlios.de</url>
    <issueTrackingUrl>http://developer.berlios.de/bugs/?group_id=2789</issueTrackingUrl>
    <siteAddress>shell.berlios.de</siteAddress>
    <siteDirectory>/home/groups/cnampaint/htdocs</siteDirectory>
    <distributionSite>shell.berlios.de</distributionSite>
    <distributionDirectory>/home/groups/cnampaint/htdocs/maven</distributionDirectory>

    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.berlios.de:/cvsroot/cnampaint:cnampaint</connection>
        <developerConnection>scm:cvs:ext:${maven.username}@cvs.berlios.de:/cvsroot/cnampaint:cnampaint</developerConnection>
    </repository>

    <versions>
        <version>
            <id>1.0</id>
            <name>1.0</name>
            <tag>CNAMPAINT_1_0</tag>
        </version>
    </versions>

    <developers>
        <developer>
            <name>Alexandre ROMAN</name>
            <id>romale</id>
            <email>romale at users.berlios.de</email>
            <roles><role>Project manager</role></roles>
        </developer>
    </developers>

    <build>
      <sourceDirectory>${maven.src.dir}/java</sourceDirectory>
      <unitTestSourceDirectory>${maven.src.dir}/test</unitTestSourceDirectory>

      <unitTest>
        <includes>
          <include>**/*Test.java</include>
        </includes>
        <excludes>
          <exclude>**/Base*Test.java</exclude>
        </excludes>
      </unitTest>

      <resources>
        <resource>
          <directory>${maven.src.dir}/java</directory>
          <includes>
            <include>**/*.properties</include>
            <include>**/*.txt</include>
          </includes>
          <filtering>true</filtering>
        </resource>
        <resource>
          <directory>${maven.src.dir}/resources</directory>
          <includes>
            <include>**/*</include>
          </includes>
          <filtering>false</filtering>
        </resource>
        <resource>
          <directory>${maven.src.dir}/conf</directory>
          <includes>
            <include>**/*</include>
          </includes>
          <filtering>true</filtering>
        </resource>
      </resources>
    </build>

    <dependencies>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.7.0</version>
            <url>http://jakarta.apache.org</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
            <url>http://jakarta.apache.org</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.4</version>
            <url>http://jakarta.apache.org</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.0</version>
            <url>http://jakarta.apache.org</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>jgoodies</groupId>
            <artifactId>binding</artifactId>
            <version>1.0-b6</version>
            <url>http://www.jgoodies.com</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>jgoodies</groupId>
            <artifactId>looks</artifactId>
            <version>1.2.2</version>
            <url>http://www.jgoodies.com</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <url>http://logging.apache.org</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>picocontainer</groupId>
            <artifactId>picocontainer</artifactId>
            <version>1.1</version>
            <url>http://picocontainer.codehaus.org</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>xpp3</groupId>
            <artifactId>xpp3</artifactId>
            <version>1.1.3.3</version>
            <url>http://www.extreme.indiana.edu/xgws/xsoap/xpp/</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>1.0.2</version>
            <url>http://xstream.codehaus.org</url>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
    </dependencies>

    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-license-plugin</report>
    </reports>
</project>
